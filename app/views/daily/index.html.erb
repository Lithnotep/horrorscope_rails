      <% @events.each do |event| %>
        <ul class="daily-subtitle" class="neo">
          <li>NAME: <%= event.harbinger.name.upcase %></li>
          <li>RELATIVE VELOCITY (MPH): <%= event.relative_velocity_mph %></li>
          <li>LUNAR DISTANCE: <%= event.lunar_distance %></li>
        </ul>
      <% end %>
    </div>
  </div>
</body>
