<h1> WELCOME <%=@user.name.upcase%>! PLEASE ENTER YOUR BIRTHDAY TO GET YOUR PERSONALIZED READING</h1>

<section class = "birthday_form">

  <%=form_tag user_path, method: :patch do %>
    <div class="form_field">
      <%= label_tag "BIRTHDAY" %>
      <%= text_field_tag :birthday, placeholder: 'year-month-day(0000-00-00)', class: "block col-12 field" %>
    </div>

    <%=submit_tag 'CONTINUE',class: "mt2 btn btn-primary mb1 bg-teal"%>
  <% end %>


</section>
